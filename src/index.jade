extends layout.jade

block content
  #typeform-window
    .close-window-button(title="Lukk Vindu")
      i.fa.fa-close
    iframe
  section.banner
    .overlay
      .content.center-vertical
        img.knowit_logo(src="img/knowit_logo.png" alt="KNOWIT")

        h5 LEDIGE STILLINGER

        h1 #{title}

        .arrow.fa.fa-angle-down

  section.hva-ser-vi-etter
    .content.center-vertical
      h1.text-left Hva ser vi etter hos deg?
      p.text-left.opacity7 Vi er på jakt etter deg som mener verden fremdeles har til gode å se de beste løsningene innen teknologi og kommunikasjon. Hos oss har vi et høyt faglig fokus i uformelle omgivelser, kort vei til sjefen og en kultur for innovasjon.

      .text-left
        .vline
        ul.experiences
          li
            .list-style
              .row
                .col-md-4.opacity7 Erfaring
                .col-md-8
                  b Mer enn 2 års erfaring med utvikling.
          li
            .list-style
              .row
                .col-md-4.opacity7 Språk
                .col-md-8
                  b Kunnskap om <strong>Java, Scala, .Net og moderne rammeverk.</strong>
          li
            .list-style
              .row
                .col-md-4.opacity7 Utdanning
                .col-md-8
                  b Universitet, høgskole eller tilsvarende.
          li
            .list-style
              .row
                .col-md-4.opacity7 Fordel
                .col-md-8
                  b iOS, Android, React, Redux, Ruby, JavaScript.
      .vspace-top-small
      .soknad-knapp.round-button
          a(href=soknad_link target="_blank") SEND INN DIN SØKNAD


      .arrow.fa.fa-angle-down

  section.slik-er-det
    .content
      h1 Slik er det å jobbe i Knowit
      .text-medium Hør det rett fra kilden. En av våre egne har uttalt seg om hvordan det er å jobbe i Knowit.
      .vspace-top-small
      .video-wrapper
        .h_iframe
          img.ratio(src="img/16x9.png")
          iframe(src="https://www.youtube.com/embed/gK5JeMgosSI" frameborder="0" allowfullscreen)

  section.bli-med
    .content
      h5 PROSJEKTER VI JOBBER MED NÅ
      h1 Bli med på ett av disse prosjektene

      .vspace-top-small

      #prosjekt-carousel.carousel.slide(data-ride="carousel")
        .carousel-inner(role="listbox")
          .item
            img.img-responsive(src="img/prosjekter.png" alt="NETTSTED")
          .item.active
            img.img-responsive(src="img/prosjekter.png" alt="WEBAPPS")
          .item
            img.img-responsive(src="img/prosjekter.png" alt="TJENESTER")

  section.vi-er-stolte-av
    .content
      img.vipps(src="img/vipps-img.png" alt="VIPPS")
      .vi-er-stolte-align
        h5 VI ER STOLTE AV
        h1
          | #Ruter, Vipps &
          br
          | BankID 2.0, by Knowit!
        .box.text-medium Våre flinke folk har vært med på å lage noen av de appene som er brukt av hundre tusener av nordmenn hver eneste dag! Dette er bare begynnelsen. Om du er rett person for jobben og vil være med på laget, så kan vi få til enda mer!

  section.flinke-folk
    #folk-carousel.carousel.slide(data-ride="carousel")
      .carousel-inner(role="listbox")
        each person, index in people
          .item(class=(index==0 ? 'active': ''))
            .content
              .folk-picture-big
                img(src=person.big_pic alt="" width="431")
              .folk-content
                h5 DYKTIGE PERSONER, GIVENDE PROSJEKTER
                .folk-selection
                  each person2, index2 in people
                    img.userpic(src=person2.small_pic width=48 title=person2.name data-target="#folk-carousel" data-slide-to=index2 alt="" class=(person.name===person2.name ? 'active' : ''))
                h2 #{person.name}
                .folk-roles #{person.role}
                hr
                .folk-desc #{person.description}
                .folk-social
                  if person.facebook
                    a(href=person.facebook).social-icon
                      i.fa.fa-facebook
                  if person.twitter
                    a(href=person.twitter).social-icon
                      i.fa.fa-twitter
                  if person.linkedin
                    a(href="#").social-icon
                      i.fa.fa-linkedin
                  if person.github
                    a(href="#").social-icon
                      i.fa.fa-github

      a.left.carousel-control(href="#folk-carousel" role="button" data-slide="prev")
        span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
        span.sr-only PREV
      a.right.carousel-control(href="#folk-carousel" role="button" data-slide="next")
        span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
        span.sr-only NEXT


  section.i-tillegg
    .content
      h1 I tillegg kan vi tilby deg:
      h5 LÆR MER &amp; TA DEL
      .row
        .col-xs-6.col-md-4
          .tillegg-box
            .icon.fa.fa-map-marker
            h5 LOKASJON
            .box.text-small Lokaler midt i Oslo sentrum!
        .col-xs-6.col-md-4
          .tillegg-box
            .icon.glyphicon.glyphicon-blackboard
            h5 KURSING
            .box.text-small Vi holder kurs internt og reiser verden rundt for å bli bedre på det vi gjør.
        .col-xs-6.col-md-4
          .tillegg-box
            .icon.fa.fa-balance-scale
            h5 TVERFAGLIG MILJØ
            .box.text-small Hos oss jobber vi på tvers av strategi, design og utvikling.

        .col-xs-6.col-md-4
          .tillegg-box
            .icon.fa.fa-plane
            h5 ÅRLIGE FAGTURER
            .box.text-small To ganger i året holder vi seminar og drar avgårde på fagtur.
        .col-xs-6.col-md-4
          .tillegg-box
            .icon.glyphicon.glyphicon-education
            h5 STERKT FAGMILJØ
            .box.text-small Lær sammen med andre. Du kan jobbe med flere kloke hoder.
        .col-xs-6.col-md-4
          .tillegg-box
            .icon.fa.fa-beer
            h5 ETTER JOBB
            .box.text-small Vi har aktiviteter fra dronebygging til øl-brygging.

  section.dette-er-oss
    .content
      h5 DETTE ER OSS
      h2 Hos oss finner du folk som er lidenskapelig glad i faget sitt og elsker å lage nyskapende løsninger. Vi jobber tverrfaglig og elsker å utfordre oss selv. Bli en del av teamet!
      .vspace-top-small
      .soknad-knapp.round-button
          a(href=soknad_link target="_blank")  SEND INN DIN SØKNAD
